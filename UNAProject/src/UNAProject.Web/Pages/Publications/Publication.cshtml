@page "/Publications/{id:int}"
@model UNAProject.Web.Pages.Publications.PublicationModel
@{
    Layout = "~/Pages/Shared/_LayoutWithSocialLinks.cshtml";
    ViewData["title"] = Model.Publication.Title;
}

@section Styles{
<link href="~/pages/publications/publication.css" rel="stylesheet" />
}

<div class="row">
    <h1>@Model.Publication.Title</h1>
</div>
<div class="row">
    <div id="publicationImagesCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Model.Publication.ImagesUri[0]" class="d-block w-100" alt="...">
            </div>
            @for (var i = 1; i < Model.Publication.ImagesUri.Count; i++)
            {
                <div class="carousel-item">
                    <img src="@Model.Publication.ImagesUri[i]" class="d-block w-100" alt="...">
                </div>
            }
        </div>
    </div>
</div>
<div class="row">
    <p>@Model.Publication.Description</p>
</div>
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <label for="formFile" class="form-label">Default file input example</label>
        <input class="form-control" type="file" id="formFile" name="formFile">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
